#include <iostream>
using namespace std;
int main(){
    int arr[5];
    int brr[5];//with extra space increases the space complexity
    int n=5;
    cout<<"Enter the element of the array"<<endl;
    for(int i=0; i<n; i++){
        cin>>arr[i];
    }
    cout<<"Printing the reverse of the array"<<endl;
    int x=0;
    for(int j=n-1; j>=0; j--){
        brr[x]=arr[j];
        x++;
    }

    for(int k=0; k<n; k++){
        cout<<brr[k]<<endl;
    }
    return 0;

 }
*********DIFFERENT APPROACH*********************
#include <iostream>
#include <algorithm>
using namespace std;
int main(){
    int arr[5];
    int n=5;
    cout<<"enter the element of the array"<<endl;
    for(int i=0; i<n; i++){
        cin>>arr[i];
    }
    cout<<"printing the reverse of the array"<<endl;
    for(int i=0; i<n/2; i++){
        swap(arr[i],arr[n-1-i]);//HERE WE do also arr[i]=arr[n-1-i]
    }
    for(int k=0; k<n; k++){
        cout<<arr[k]<<endl;
    }
    return 0;
}
