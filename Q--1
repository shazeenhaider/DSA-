#include <iostream>
using namespace std;
int main(){
    int arr[5]={0,2,0,4,1};//move all zero to end 24100
    int n=5;
    int end=n-1;
    for(int i=0; i<=end; i++){
    if(arr[i]==0){
        int temp=arr[i];
        arr[i]=arr[end];
        arr[end]=temp;
        end--;
        i--;// rechecking in case the last element is already 0 and swap with front first 0
    }
}
    for(int j=0; j<n; j++){
        cout<<arr[j]<<" "<<endl;
    }

    return 0;

}
2ND APPROACH FIRST PUTTING ALL NON-ZERO THAN PUTTING ZERO AT LAST 
#include <iostream>
using namespace std;

int main() {
    int arr[5] = {0, 2, 0, 4, 1};
    int n = 5;

    int index = 0;  // index to place non-zero elements

    // First pass: move non-zero elements to the front
    for (int i = 0; i < n; i++) {
        if (arr[i] != 0) {
            arr[index++] = arr[i];
        }
    }

    // Second pass: fill the rest with zeros
    while (index < n) {
        arr[index++] = 0;
    }

    // Print result
    for (int j = 0; j < n; j++) {
        cout << arr[j] << " ";
    }

    return 0;
}
