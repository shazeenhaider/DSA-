#include <iostream>
using namespace std;
class Node // creation of node for the linkedlist
{
public:
    int data;
    Node *next;
    Node(int value)
    {
        data = value;
        next = NULL;
    }
    ~Node()
    { // node destructor for deletion of each node starting from the tail
        if (next != NULL)
        {
            cout << "NOde destructor for data" << data;
            delete next;
            next = NULL;
        }
    }
};
class List // collecting the nodes together
{
    Node *head;
    Node *tail;

public:
    List()
    {
        head = NULL;
        tail = NULL;
    }
    ~List()
    {
        cout << "Destructor of list" << endl;
        if (head != NULL)
        {
            delete head; // calling the node destructor here first list destrctor call than node
            head = NULL;
        }
    }
    void push_front(int value) // push at the front of linkedlist
    {
        Node *newnode = new Node(value);
        if (head == NULL)
        {
            head = tail = newnode;
        }
        else
        {
            newnode->next = head;
            head = newnode;
        }
    }
    void push_back(int value)
    { // push at the end of linkedlist
        Node *newnode = new Node(value);
        if (head == NULL)
        {
            head = tail = newnode;
        }
        else
        {
            tail->next = newnode;
            tail = newnode;
        }
    }
    void Printlist()
    {
        Node *temp = head;
        while (temp != NULL)
        {
            cout << temp->data << "-->";
            temp = temp->next;
        }
        cout << "NULL";
    }
    void insert(int value, int pos)
    {
        Node *newnode = new Node(value);
        Node *temp = head;
        for (int i = 0; i < pos - 1; i++)
        {
            if (temp == NULL)
            {
                cout << "INValid POSITION";
                return;
            }
            temp = temp->next;
        }
        newnode->next = temp->next;
        temp->next = newnode;
    }
    void pop_front()
    {
        if (head == NULL)
        {
            cout << "LInkeList is empty";
            return;
        }
        else
        {
            Node *temp = head;
            head = head->next;
            temp->next = NULL;
            delete temp;
        }
    }
        void pop_back(){
        Node* temp=head;
        while(temp->next->next!=NULL){//temp->next!=tail
            temp=temp->next;
        }
        temp->next=NULL;
        delete tail;
        tail=temp;
    }
};
int main()
{
    List ll;
    ll.push_front(3);
    ll.push_front(2);
    ll.push_front(1);
    ll.push_back(8);
    ll.insert(100, 4);
    ll.Printlist();
    return 0;
}
