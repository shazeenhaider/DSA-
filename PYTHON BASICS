#print the first n natural  number
num=int(input("enter the value of num\n"))
i=0#initialization of iterator
while(i<num):
    print(i)
    i = i+1#updation of the iterator

print("loop ended succesfully")


#multiplication table in python programming
num=int(input("enter the number\n"))
i=1
while(i<=10):
    tab=num*i
    print(num,"X",i,"=",tab)
    i=i+1
print("loop completed ")    

#find the sum of first n natural number
num=int(input("enter the value of n\n"))
sum=0 #initialization
i=0
while(i<=num):
    sum=sum+i
    i=i+1
print("sum of the n natural number is",sum)

