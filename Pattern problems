#include <iostream>
using namespace std;
int main(){
    int row,col;
    cout<<"enter the number of rows"<<endl;
    cin>>row;
    cout<<"enter the number of col"<<endl;
    cin>>col;
    for(int i=1; i<=row; i++){//tracing row
        for(int j=1; j<=col; j++){//tracing column
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}
