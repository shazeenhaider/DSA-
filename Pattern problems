#include <iostream>
using namespace std;
int main(){
    int i,j,row;
    cout<<"enter the number of row"<<endl;
    cin>>row;
    for(i=1; i<=row; i++){
        for(j=i; j<row; j++){
            cout<<" ";
        }
        for(j=1; j<=i; j++){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}
